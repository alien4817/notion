    <script>
        function showFrame(frameNumber) {
            document.querySelectorAll('iframe').forEach(frame => {
                frame.classList.remove('active');
            });
            const activeFrame = document.getElementById(`frame${frameNumber}`);
            activeFrame.classList.add('active');
            // 更新ARIA狀態
            document.querySelectorAll('.nav button').forEach(btn => {
                btn.setAttribute('aria-expanded', btn.getAttribute('aria-controls') === `frame${frameNumber}` ? 'true' : 'false');
            });
        }
        
        // 初始化
        document.querySelectorAll('.nav button').forEach(btn => {
            btn.setAttribute('aria-expanded', btn.getAttribute('aria-controls') === 'frame1' ? 'true' : 'false');
        });
        showFrame(1);
    </script>
